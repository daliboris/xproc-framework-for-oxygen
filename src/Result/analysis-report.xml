<?xml version="1.0" encoding="UTF-8"?>
<xpan:report xmlns:xpan="https://www.daliboris.cz/ns/xproc/analysis">
   <analysis file-name="analyzer.xpl"
             path="file:///V:/Projekty/Github/Daliboris/XProc/xproc-framework-for-oxygen/src/xproc/analyzer.xpl"
             xmlns="https://www.daliboris.cz/ns/xproc/analysis">
      <step name="xproc-analyzer">
         <prolog>
            <namespaces>
               <namespace prefix="c"
                          value="http://www.w3.org/ns/xproc-step"/>
               <namespace prefix="p"
                          value="http://www.w3.org/ns/xproc"/>
               <namespace prefix="xpan"
                          value="https://www.daliboris.cz/ns/xproc/analysis"/>
               <namespace prefix="xml"
                          value="http://www.w3.org/XML/1998/namespace"/>
            </namespaces>
            <options>
               <option name="input-directory"/>
            </options>
            <ports>
               <input port="source"
                      primary="true"
                      sequence="true"/>
               <output port="result"/>
            </ports>
         </prolog>
         <body>
            <call step="p:directory-list">
               <parameter name="include-filter"
                          value="^.*\.xpl"/>
               <parameter name="p:with-option"
                          value=""/>
            </call>
            <call step="p:filter">
               <parameter name="select"
                          value="//c:file"/>
            </call>
            <call step="p:for-each"/>
            <call step="p:wrap-sequence"
                  name="report">
               <parameter name="wrapper"
                          value="xan:report"/>
            </call>
            <call step="p:xslt"
                  name="html-report">
               <parameter name="p:input"
                          value="&#xA;              &#xA;    "/>
               <parameter name="p:input"
                          value="&#xA;      &#xA;    "/>
               <parameter name="p:input"
                          value="&#xA;      &#xA;    "/>
            </call>
         </body>
      </step>
   </analysis>
   <analysis file-name="steps-analyzer.xpl"
             path="file:///V:/Projekty/Github/Daliboris/XProc/xproc-framework-for-oxygen/src/xproc/steps-analyzer.xpl"
             xmlns="https://www.daliboris.cz/ns/xproc/analysis">
      <step>
         <prolog>
            <documentation length="0"/>
            <namespaces>
               <namespace prefix="c"
                          value="http://www.w3.org/ns/xproc-step"/>
               <namespace prefix="p"
                          value="http://www.w3.org/ns/xproc"/>
               <namespace prefix="xpan"
                          value="https://www.daliboris.cz/ns/xproc/analysis"/>
               <namespace prefix="xs"
                          value="http://www.w3.org/2001/XMLSchema"/>
               <namespace prefix="xml"
                          value="http://www.w3.org/XML/1998/namespace"/>
            </namespaces>
            <options>
               <option name="input-directory"
                       select="'.'"/>
            </options>
            <ports>
               <input port="source"
                      primary="true"
                      sequence="true"/>
               <output port="result"/>
            </ports>
         </prolog>
         <body>
            <documentation length="0"/>
            <call step="p:directory-list">
               <parameter name="path"
                          value="{$input-directory}"/>
               <parameter name="include-filter"
                          value="^.*\.xpl"/>
            </call>
            <call step="p:for-each">
               <port name="anonymous">
                  <parameter name="select"
                             value="//c:file"/>
               </port>
            </call>
            <call step="p:wrap-sequence">
               <parameter name="wrapper"
                          value="xpan:report"/>
            </call>
            <call step="p:store">
               <parameter name="href"
                          value="../Result/analysis-report.xml"/>
               <parameter name="serialization"
                          value="map{'indent' : true()}"/>
            </call>
            <call step="p:xslt">
               <port name="stylesheet">
                  <parameter name="href"
                             value="../Xslt/analysis-report-to-html.xsl"/>
               </port>
            </call>
            <call step="p:store">
               <parameter name="href"
                          value="../Result/analysis-report.html"/>
               <parameter name="serialization"
                          value="map{'indent' : true()}"/>
            </call>
         </body>
      </step>
   </analysis>
</xpan:report>